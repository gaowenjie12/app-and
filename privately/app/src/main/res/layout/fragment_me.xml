                        android:layout_marginTop="10dp"
                        android:text="推广"
                        android:textColor="@color/text_3"
                        android:textSize="@dimen/text_one_five" />
                </com.zsoe.businesssharing.commonview.SquareLinearLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <com.zsoe.businesssharing.commonview.SquareLinearLayout
                    android:id="@+id/ll_liuyanban"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/simple_item_background_selector"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/liuyanban" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="留言板"
                        android:textColor="@color/text_3"
                        android:textSize="@dimen/text_one_five" />
                </com.zsoe.businesssharing.commonview.SquareLinearLayout>

                <com.zsoe.businesssharing.commonview.SquareLinearLayout
                    android:id="@+id/ll_wode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/simple_item_background_selector"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/wode" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="我的"
                        android:textColor="@color/text_3"
                        android:textSize="@dimen/text_one_five" />
                </com.zsoe.businesssharing.commonview.SquareLinearLayout>


                <com.zsoe.businesssharing.commonview.SquareLinearLayout
                    android:id="@+id/ll_shoucang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/simple_item_background_selector"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/shoucang_m" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="收藏"
                        android:textColor="@color/text_3"
                        android:textSize="@dimen/text_one_five" />
                </com.zsoe.businesssharing.commonview.SquareLinearLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <com.zsoe.businesssharing.commonview.SquareLinearLayout
                    android:id="@+id/ll_kajuan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/simple_item_background_selector"
                    android:gravity="center"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/kabao" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="我的卡包"
                        android:textColor="@color/text_3"
                        android:textSize="@dimen/text_one_five" />
                </com.zsoe.businesssharing.commonview.SquareLinearLayout>

                <com.zsoe.businesssharing.commonview.SquareLinearLayout
                    android:id="@+id/ll_shezhi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/simple_item_background_selector"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/shezhi" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="设置"
                        android:textColor="@color/text_3"
                        android:textSize="@dimen/text_one_five" />
                </com.zsoe.businesssharing.commonview.SquareLinearLayout>


                <com.zsoe.businesssharing.commonview.SquareLinearLayout
                    android:id="@+id/ll_kefu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/simple_item_background_selector"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/lianxikefu" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="联系客服"
                        android:textColor="@color/text_3"
                        android:textSize="@dimen/text_one_five" />
                </com.zsoe.businesssharing.commonview.SquareLinearLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <com.zsoe.businesssharing.commonview.SquareLinearLayout
                    android:id="@+id/ll_bangzhu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/simple_item_background_selector"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/bangzhu" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="帮助中心"
                        android:textColor="@color/text_3"
                        android:textSize="@dimen/text_one_five" />
                </com.zsoe.businesssharing.commonview.SquareLinearLayout>

                <com.zsoe.businesssharing.commonview.SquareLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/simple_item_background_selector"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="invisible" />


                <com.zsoe.businesssharing.commonview.SquareLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/simple_item_background_selector"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="invisible" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>