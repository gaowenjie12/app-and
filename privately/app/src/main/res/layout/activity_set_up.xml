<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    tools:context=".business.me.SetUpActivity">

    <include layout="@layout/comm_title_bar" />


    <RelativeLayout
        android:id="@+id/rl_zhanghaoguanli"
        style="@style/me_layout_style"
        android:layout_marginTop="10dp">

        <TextView
            style="@style/me_text_style"
            android:text="账号密码管理" />


        <ImageView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/right_arrow" />

    </RelativeLayout>


    <RelativeLayout

        android:id="@+id/rl_qingchuhuanc"
        style="@style/me_layout_style"
        android:layout_marginTop="10dp">

        <TextView
            style="@style/me_text_style"
            android:text="清除缓存" />


        <ImageView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/right_arrow" />

    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/rl_guanyuwomen"
        style="@style/me_layout_style"
        android:layout_marginTop="10dp">

        <TextView
            style="@style/me_text_style"
            android:text="关于我们" />


        <ImageView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/right_arrow" />

    </RelativeLayout>

    <View style="@style/line_style" />

    <RelativeLayout

        android:id="@+id/rl_jianchagengxin"
        style="@style/me_layout_style"
        android:layout_marginTop="10dp">

        <TextView
            style="@style/me_text_style"
            android:text="检查更新" />


        <ImageView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/right_arrow" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_btn_login_selected"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="18dp" />
</LinearLayout>