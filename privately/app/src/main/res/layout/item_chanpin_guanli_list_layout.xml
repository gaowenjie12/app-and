<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/simple_item_background_selector"
    android:orientation="horizontal"
    android:padding="@dimen/adaptive_5dp">

    <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/product_image"
        android:layout_width="125dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        fresco:placeholderImage="@mipmap/icon_default"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:roundedCornerRadius="5dp" />


    <LinearLayout
        android:id="@+id/ll_ding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/product_image"
        android:orientation="vertical">

        <TextView

            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_3"
            android:textSize="@dimen/text_one_five"
            tools:text="【北京站】合伙人股权分配、
股权激励、顶层设计、股..." />

        <TextView
            android:id="@+id/tv_zhiwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_b6"
            android:textSize="@dimen/text_one_three"
            tools:text="7月4日 16:00 朝阳区" />


        <TextView
            android:id="@+id/tv_p_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_ding"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_daliang_storke"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:textColor="@color/AC9472"
            android:textSize="@dimen/text_one_two"
            tools:text="1268人看过" />

    </LinearLayout>

    <View
        style="@style/line_style"
        android:layout_below="@+id/product_image"
        android:layout_marginTop="10dp" />

</RelativeLayout>
