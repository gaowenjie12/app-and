<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".business.home.FinancingLoansActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white">

        <ImageView
            android:id="@+id/title_left_iv"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/back_arrow" />


        <com.flyco.tablayout.SegmentTabLayout
            android:id="@+id/tl_4"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            app:tl_bar_color="@color/white"
            app:tl_bar_stroke_width="0dp"
            app:tl_divider_color="@color/AC9472"
            app:tl_divider_padding="18dp"
            app:tl_divider_width="1dp"
            app:tl_indicator_color="@color/white"
            app:tl_textSelectColor="@color/AC9472"
            app:tl_textUnselectColor="@color/text_b6"
            app:tl_textsize="@dimen/text_one_nine"
            tl:tl_indicator_margin_bottom="2dp"
            tl:tl_indicator_margin_left="12dp"
            tl:tl_indicator_margin_right="12dp"
            tl:tl_indicator_margin_top="2dp" />


        <View
            style="@style/line_style"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_change"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</androidx.appcompat.widget.LinearLayoutCompat>