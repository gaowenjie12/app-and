<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <com.zsoe.businesssharing.commonview.PtrClassicRefreshLayout xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ptr_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/main_bg">

        <com.zsoe.businesssharing.commonview.VerticalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.zsoe.businesssharing.commonview.banner.BannerView
                    android:id="@+id/banner_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.zsoe.businesssharing.commonview.banner.BannerView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/center1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="分会相册"
                            android:textColor="@color/text_3"
                            android:textSize="@dimen/text_one_six" />

                        <View
                            style="@style/line_style"
                            android:layout_width="70dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:layout_toLeftOf="@+id/center1"
                            android:background="@color/text_9" />

                        <View

                            style="@style/line_style"
                            android:layout_width="70dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/center1"
                            android:background="@color/text_9" />

                    </RelativeLayout>
                </LinearLayout>

                <com.zsoe.businesssharing.commonview.MyRecycleView
                    android:id="@+id/rv_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                </com.zsoe.businesssharing.commonview.MyRecycleView>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="活动成果"
                        android:textColor="@color/text_3"
                        android:textSize="@dimen/text_one_six" />

                    <View
                        style="@style/line_style"
                        android:layout_marginTop="10dp" />

                    <com.zsoe.businesssharing.commonview.ExpandableTextView
                        android:id="@+id/tv_chenguo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:DrawableAndTextGravity="right"
                        app:contentTextColor="@color/text_3"
                        app:contentTextSize="8dp"
                        app:expandCollapseTextColor="@color/AC9472"
                        app:expandText="更多"
                        app:maxCollapsedLines="4" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </LinearLayout>
        </com.zsoe.businesssharing.commonview.VerticalScrollView>

    </com.zsoe.businesssharing.commonview.PtrClassicRefreshLayout>
</RelativeLayout>